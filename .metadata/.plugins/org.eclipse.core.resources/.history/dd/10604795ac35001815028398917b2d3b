<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="org.tarena.dao.UserMapper">
	<select id="findByName" resultType="org.tarena.entity.User" parameterType="string">
		select * from cn_user where cn_user_name= #{username};
	</select>
	<insert id="save" parameterType="org.tarena.entity.User">
		insert into cn_user values
		(#{cn_user_id},#{cn_user_name},#{cn_user_password},#{cn_user_token},#{cn_user_desc});
	</insert>
	<update id="changepwd" parameterType="org.tarena.entity.User">
		update cn_user set cn_user_password =(#{cn_user_password}) where cn_user_id = 
		(#{cn_user_id})
	</update>
</mapper>