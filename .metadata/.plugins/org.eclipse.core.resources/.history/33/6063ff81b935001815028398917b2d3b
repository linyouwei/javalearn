/**
 * 页面初始化后，绑定函数。
 */
$(function(){
	//注册
	$("#sign-up").click(function(){
		register();
	});
});

//注册
function register() {
	//浏览器的打印信息
	//console.log("into register")
//	alert("注册成功.");
//	$("#zc").attr("class","sig sig_out");
//	$("#dl").attr("class","log log_in");
	var user_name= $("#regist_username").val();
	var nick_name = $("#nickname").val();
	var password = $("#regist_password").val();
	var password2 = $("#final_password").val();
//	alert(user_name);
//	alert(nick_name);
//	alert(password);
//	alert(password2);
	var flag = true;
	if(flag){
		$.post("/microblog/myblog/register.form",
		{"cn_user_name":user_name,"cn_user_password":password,"cn_user_desc":nick_name},
		function(result){
//			alert("进入result语句");
			if(result.success){
				var map = result.data;
				if(map.pass){
					alert("注册成功");
					$("#back").trigger("click");
				}else{
					alert("注册失败");
				}
			}else{
//				alert("result.success为true");
			}
		});
	}
}


